<h1>Title: <%= @post.title%></h1>
<p> created by <%= @post.user.name%> at: <%= @post.created_at%>
  <p>
    <h2>Content:</h2>
    <p >
      <strong><%= @post.body%></strong>
    </p>

    <% if current_user != nil && current_user.id == @post.user_id %>
    <li><%= link_to "Destroy", post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
    <% end %>
              
    <h3>Comments:</h3>
    <% @comments.each do |comment| %>
      <p>
        <strong>commenter:</strong>
        <%= comment.user.name %>
        <strong> at </strong>
        <%= comment.created_at %>
      </p>
      <p>
        <strong>comment:</strong>
        <%= comment.body %>
      </p>

      <% if logged_in? %>
        

      <% if current_user != nil && (comment.user_id == current_user.id || @post.user_id == current_user.id)%>
      <p>
          <%= link_to "Destroy Comment", [comment.post, comment], data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      } %>
        </p>
      <% end %>
    <% end %>
          <% end %>


    <% if logged_in? %>
    <h2>Add a comment:</h2>
      <%= form_with model: [ @post, @comments.build ] do |form| %>
        <p>
          <%= form.label :body %><br>
          <%= form.text_area :body %>
        </p>
        <p>
          <%= form.submit %>
        </p>
      <% end %>
    <% end%>
    